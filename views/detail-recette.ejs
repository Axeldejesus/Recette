<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Détail de la Recette</title>
</head>
<body>
    <h2><%= recette.titre %></h2>
    <p><%= recette.description %></p>
    <!-- Ajoutez ici d'autres détails de la recette si nécessaire -->

    <h3>Commentaires</h3>
<% if (commentaires && commentaires.length) { %>
    <ul>
        <% commentaires.forEach(function(commentaire) { %>
            <li>
                <strong>Note : <%= commentaire.note %>/5</strong>
                <p><%= commentaire.contenu %></p>
                <!-- Autres informations sur le commentaire si nécessaire -->
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>Aucun commentaire pour cette recette.</p>
<% } %>

    <h3>Ajouter un commentaire</h3>
    <form action="/commentaires/ajouter/<%= recette._id %>" method="post">
        <label for="note">Note :</label>
        <input type="number" id="note" name="note" min="1" max="5" required><br>

        <label for="contenu">Commentaire :</label>
        <textarea id="contenu" name="contenu" required></textarea><br>

        <!-- Assurez-vous d'inclure l'ID de l'utilisateur si vous gérez les sessions -->
        

        <input type="submit" value="Ajouter le commentaire">
    </form>
</body>
</html>
